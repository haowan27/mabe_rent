    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug : Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/examples/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=localhost",
                "--port=9999"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}